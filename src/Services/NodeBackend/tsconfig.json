{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "es6",                               
    "module": "commonjs",                           
    "rootDir": "./src",                             
    "outDir": "./dist",                             
    "moduleResolution": "node",
    "esModuleInterop": true,                       
  },
  "exclude": [
    "./node_modules"
  ],
  "include": ["src/**/*.ts", "src/**/*.js"]
}